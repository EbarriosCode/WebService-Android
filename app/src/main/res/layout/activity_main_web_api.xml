<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="bitacoraelectronica.azucar.com.gt.wservice.WebServiceRetrofit.activities.MainWebApiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/btnPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_input_add"
        />

    <Button
        android:id="@+id/btnRecargar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:background="@android:drawable/ic_menu_rotate"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos WebApi .NET"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>

    <ProgressBar
        android:id="@+id/progressHeroku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvListaHeroku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaWebApi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
